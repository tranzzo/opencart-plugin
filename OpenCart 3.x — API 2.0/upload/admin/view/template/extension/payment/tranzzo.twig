{{ header }} {{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-pp-pro-uk" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}"
                   class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success"><i class="fa fa-exclamation-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body"></div>
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-tranzzo"
                  class="form-horizontal">
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-pos_id">{{ entry_pos_id }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_pos_id" value="{{ payment_tranzzo_pos_id }}"
                               placeholder="{{ entry_pos_id }}" id="input-pos_id" class="form-control" />
                        {% if error_pos_id %}
                        <div class="text-danger">{{ error_pos_id }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-api_key">{{ entry_api_key }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_api_key" value="{{ payment_tranzzo_api_key }}"
                               placeholder="{{ entry_api_key }}" id="input-api_key" class="form-control"/>
                        {% if error_api_key %}
                            <div class="text-danger">{{ error_api_key }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-api_secret"> {{ entry_api_secret }} </label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_api_secret"
                               value="{{ payment_tranzzo_api_secret }}"
                               placeholder="{{ entry_api_secret }}" id="input-api_secret"
                               class="form-control"/>
                        {% if error_api_secret %}
                            <div class="text-danger">{{ error_api_secret }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label"
                           for="input-endpoints_key">
                        {{ entry_endpoints_key }}
                    </label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_endpoints_key"
                               value="{{ payment_tranzzo_endpoints_key }}"
                               placeholder="{{ entry_endpoints_key }}" id="input-endpoints_key"
                               class="form-control"/>
                        {% if error_endpoints_key %}
                            <div class="text-danger">{{ error_endpoints_key }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">{{ entry_type_payment }}</label>
                    <div class="col-sm-10">
                        <label class="lb-order-listen">
                            {% if payment_tranzzo_type_payment %}
                                <input type="radio" name="payment_tranzzo_type_payment" value="1" id="on" checked>
                                <label for="on">On</label>
                                <input type="radio" name="payment_tranzzo_type_payment" value="0" id="off">
                                <label for="off">Off</label>
                            {% else %}
                                <input type="radio" name="payment_tranzzo_type_payment" value="1" id="on">
                                <label for="on">On</label>
                                <input type="radio" name="payment_tranzzo_type_payment" value="0" id="off" checked>
                                <label for="off">Off</label>
                            {% endif %}
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip"
                                                                                  title="{{ help_total }}">{{ entry_total }}</span></label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_total" value="{{ payment_tranzzo_total }}"
                               placeholder="{{ entry_total }}" id="input-pos_id" class="form-control"/>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label"
                           for="input-order-status-complete">{{ entry_order_status_complete }}</label>
                    <div class="col-sm-10">
                        <select name="payment_tranzzo_order_status_complete_id" id="input-order-status-complete"
                                class="form-control">
                            <option value="">---</option>
                            {% for order_status in order_statuses %}
                                {% if order_status.order_status_id == payment_tranzzo_order_status_complete_id %}
                                    <option value="{{ order_status.order_status_id }}"
                                            selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>

                        {% if error_order_status_complete_id %}
                            <div class="text-danger">{{ error_order_status_complete_id }}</div>
                        {% endif %}
                        {% if error_order_status %}
                            <div class="text-danger">{{ error_order_status }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="input-order-status-auth">{{ entry_order_status_auth }}</label>
                    <div class="col-sm-10">
                        <select name="payment_tranzzo_order_status_auth_id" id="input-order-status-auth"
                                class="form-control">
                            <option value="">---</option>
                            {% for order_status in order_statuses %}
                                {% if order_status.order_status_id == payment_tranzzo_order_status_auth_id %}
                                    <option value="{{ order_status.order_status_id }}"
                                            selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>

                        {% if error_order_status_auth_id %}
                            <div class="text-danger">{{ error_order_status_auth_id }}</div>
                        {% endif %}
                        {% if error_order_status %}
                            <div class="text-danger">{{ error_order_status }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label"
                           for="input-order-status-failure">{{ entry_order_status_failure }}</label>
                    <div class="col-sm-10">
                        <select name="payment_tranzzo_order_status_failure_id" id="input-order-status-failure"
                                class="form-control">
                            <option value="">---</option>
                            {% for order_status in order_statuses %}
                                {% if order_status.order_status_id == payment_tranzzo_order_status_failure_id %}
                                    <option value="{{ order_status.order_status_id }}"
                                            selected="selected">{{ order_status.name }}</option>
                                {% else %}
                                    <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>

                        {% if error_order_status_failure_id %}
                            <div class="text-danger">{{ error_order_status_failure_id }}</div>
                        {% endif %}
                        {% if error_order_status %}
                            <div class="text-danger">{{ error_order_status }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-sm-2 control-label">{{ entry_order_status_listen }}</label>
                    <div class="col-sm-10">
                        {% for order_status in order_statuses %}
                            {% if (payment_tranzzo_order_status_listen is iterable) and (order_status.order_status_id in payment_tranzzo_order_status_listen) %}
                            <label class="lb-order-listen">
                                <input type="checkbox" name="payment_tranzzo_order_status_listen[]"
                                       value="{{ order_status.order_status_id }}" checked="checked">
                                {{ order_status.name }}
                            </label>
                        {% else %}
                            <label class="lb-order-listen">
                                <input type="checkbox" name="payment_tranzzo_order_status_listen[]"
                                       value="{{ order_status.order_status_id }}">
                                {{ order_status.name }}
                            </label>
                            {% endif %}
                        {% endfor %}

                        {% if error_order_status_listen %}
                        <div class="text-danger">{{ error_order_status_listen }}</div>
                        {% endif %}
                        {% if error_order_status %}
                        <div class="text-danger">{{ error_order_status }}</div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="input-sort-order">{{ entry_sort_order }}</label>
                    <div class="col-sm-10">
                        <input type="text" name="payment_tranzzo_sort_order" value="{{ payment_tranzzo_sort_order }}"
                               placeholder="{{ entry_sort_order }}" id="input-sort-order"
                               class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label"
                           for="input-geo-zone">{{ entry_geo_zone }}</label>
                    <div class="col-sm-10">
                        <select name="payment_tranzzo_geo_zone_id" id="input-geo-zone" class="form-control">
                            <option value="0">{{ text_all_zones }}</option>
                            {% for geo_zone in geo_zones %}
                                {% if geo_zone.geo_zone_id == payment_tranzzo_geo_zone_id %}
                                    <option value="{{ geo_zone.geo_zone_id }}"
                                            selected="selected">{{ geo_zone.name }}</option>
                                {% else %}
                                    <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                    <div class="col-sm-10">
                        <select name="payment_tranzzo_status" id="input-status" class="form-control">
                            {% if payment_tranzzo_status %}
                            <option value="1" selected="selected">{{ text_enabled }}</option>
                            <option value="0">{{ text_disabled }}</option>
                            {% else %}
                                <option value="1">{{ text_enabled }}</option>
                                <option value="0" selected="selected">{{ text_disabled }}</option>
                            {% endif %}
                        </select>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{ footer }}